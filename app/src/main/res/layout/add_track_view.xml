<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_track_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Shutdown - "/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:textColor="@color/white"
            android:text="@string/timer"
            android:textSize="68sp"/>

        <ImageButton
            android:id="@+id/pausePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_ripple"
            android:visibility="gone"
            android:src="@drawable/ic_pause_circle_outline_white_48dp"/>

    </LinearLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="6dp" >

        <RadioButton
            android:id="@+id/radio_song_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:checked="true"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/song" />

        <EditText
            android:id="@+id/browse_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="64dp"
            android:clickable="true"
            android:editable="false"
            android:hint="@string/tap_to_browse"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/greyText" />

        <ImageButton
            android:id="@+id/previewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_play_circle_outline_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="140dp"
            android:text="@string/start_text"
            android:textColor="@color/greyText"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="80dp"
            android:layout_marginTop="140dp"
            android:text="@string/stop_text"
            android:textColor="@color/greyText"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="164dp"
            android:ems="4"
            android:hint="@string/zero_time"
            android:inputType="time"
            android:maxLength="5"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@color/greyText" />

        <EditText
            android:id="@+id/stop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="52dp"
            android:layout_marginTop="164dp"
            android:ems="4"
            android:hint="@string/zero_time"
            android:inputType="time"
            android:maxLength="5"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@color/greyText" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/add_track_button"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@id/card_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/square_button_background"
        android:enabled="false"
        android:text="@string/add_track"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/add_track_button_view"
        android:layout_width="130dp"
        android:layout_height="4dp"
        android:layout_below="@id/add_track_button"
        android:layout_centerInParent="true"
        android:background="@drawable/drop_shadow" />

</RelativeLayout>

