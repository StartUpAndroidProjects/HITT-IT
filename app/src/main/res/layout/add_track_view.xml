<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:transitionName="browse_transition" />

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/add_track_button"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="56dp"
                android:background="@drawable/square_button_background"
                android:enabled="false"
                android:text="@string/add_track"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp">

                <RadioButton
                    android:id="@+id/radio_song_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:checked="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/song" />

                <EditText
                    android:id="@+id/browse_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="64dp"
                    android:clickable="true"
                    android:editable="false"
                    android:hint="@string/tap_to_browse"
                    android:inputType="none"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/greyText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="140dp"
                    android:text="@string/start_text"
                    android:textColor="@color/greyText"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="140dp"
                    android:text="@string/stop_text"
                    android:textColor="@color/greyText"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="164dp"
                    android:ems="4"
                    android:hint="@string/zero_time"
                    android:inputType="time"
                    android:maxLength="5"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/greyText" />

                <EditText
                    android:id="@+id/stop_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="164dp"
                    android:ems="4"
                    android:hint="@string/zero_time"
                    android:inputType="time"
                    android:maxLength="5"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/greyText" />

            </android.support.v7.widget.CardView>

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>

